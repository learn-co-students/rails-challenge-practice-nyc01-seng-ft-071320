<h2>Edit Building</h2>
<% if @building.errors.any? %>
  <div id="error_explaination">
    <h3>
      <%= pluralize(@building.errors.count, 'error') %>
      found:
    </h3>
    <ul>
      <% @building.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div>
  <%= form_for @building do |f| %>
    <p><%= f.label :name %></p>
    <p><%= f.text_field :name %></p>
    
    <p><%= f.label :country %>
    <p><%= f.text_field :country %></p>

    <p><%= f.label :address %></p>
    <p><%= f.text_field :address %></p>

    <p><%= f.label :rent_per_floor %></p>
    <p><%= f.number_field :rent_per_floor %></p>

    <p><%= f.label :number_of_floors %></p>
    <p><%= f.number_field :number_of_floors %></p>

    <p><%= f.submit %></p>
  <% end %>
</div>